mixin reasone(title, desc, icon)
  .row.center-container
    .col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-0.col-lg-3.padding-bottom-xs.center-col.text-right
      i.icon.icon-xxl(class=icon)
    .col-xs-10.col-xs-offset-1.col-sm-4.col-sm-offset-0.col-lg-6.padding-bottom-xs.center-col
      h3.text-uppercase !{title}
      p.lead !{desc}

