mixin navTop(secondLvl)
  -var pageSrc = ''
  if(secondLvl)
    - var pageSrc = './../'
  ul.nav.navbar-nav.navbar-right
    li: a(href="#program") Program
    //li: a(href="#mentors") Mentors
    li: a(href="#partners") Partners
    li: a(href="#location") Location
    li: a(href=pageSrc+"2016") 2016 Edition    
    li.text-right
      a.button.btn-info.display-inline-block(href="#apply") Apply
nav.navbar.navbar-default.navbar-fixed-top.affix-top(data-spy="affix" data-offset-top="230")
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      block logo
        a.navbar-brand(href='index.html')
          img.logo-top(src='assets/img/logo-dark.svg', alt='Krk Road logo', itemprop='logo')
    #navbar.navbar-collapse.collapse
      block navTop
        +navTop(false)
